<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhenCanILegallyBuyAlcohol.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="When Can I Legally Buy Alcohol?" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label x:Name="YearsLabel"/>
        <Editor x:Name="AgeInput" Placeholder="Enter your age"/>
        <Button x:Name="SubmitButton" Text="Submit" Clicked="SubmitButton_Clicked"/>

    </StackLayout>

</ContentPage>
